# Server
PORT=3001
NODE_ENV=development

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# PostgreSQL Connection (Supabase)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Amadeus Chain Integration (optional)
# Get your private key from Amadeus wallet, testnet faucet, or generate via SDK
AMADEUS_NODE_URL=https://nodes.amadeus.bot/api
AMADEUS_PRIVATE_KEY=
AMADEUS_NETWORK=mainnet
# Set USE_AMADEUS=false to disable on-chain operations and run backend in simulation-only mode
USE_AMADEUS=true
LOG_CHAIN_OPS=true

# Agent Config
AGENT_POLL_INTERVAL_MS=60000
